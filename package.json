{
  "name": "advent-mongo",
  "version": "1.0.1",
  "description": "MongoDB engine for advent.",
  "keywords": [
    "store",
    "event",
    "microservice",
    "event sourcing",
    "advent"
  ],
  "author": "Jonathan Brumley <cayasso@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git://github.com/cayasso/advent-mongo.git"
  },
  "scripts": {
    "test": "npm run lint && mocha",
    "build": "npm run clean && babel src -d lib",
    "pretty": "prettier --no-semi --single-quote --write src/**/*.js",
    "prepublish": "npm run build",
    "precommit": "lint-staged",
    "clean": "rm -rf lib/",
    "lint": "xo --env=mocha"
  },
  "dependencies": {
    "monk": "^6.0.5"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "eslint-config-prettier": "^2.8.0",
    "mocha": "~4.0.1",
    "pre-commit": "^1.2.2",
    "should": "~13.1.3",
    "xo": "^0.18.2"
  },
  "xo": {
    "ignores": [
      "examples/**/*"
    ],
    "extends": "prettier",
    "rules": {
      "no-await-in-loop": 0,
      "unicorn/no-process-exit": 0
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint",
      "prettier --single-quote --no-semi --write",
      "git add"
    ]
  },
  "license": "MIT",
  "main": "./index",
  "pre-commit": [
    "test"
  ]
}
